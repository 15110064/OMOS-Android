        <!-- Signup Button -->
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnSignup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_marginTop="@dimen/dp8"
            android:padding="12dp"
            fancy:fb_defaultColor="@color/colorPrimaryDark"
            fancy:fb_radius="5dp"
            fancy:fb_text="Tạo tài khoản"
            fancy:fb_textColor="#fff"/>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnlogin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp16"
            android:padding="12dp"
            fancy:fb_defaultColor="#fff"
            fancy:fb_borderColor="@color/colorPrimary"
            fancy:fb_borderWidth="2dp"
            fancy:fb_radius="5dp"
            fancy:fb_text="Đã có tài khoản. Đăng nhập ngay"
