<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        android:src="@drawable/ts4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        >
        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textStyle="bold"
            android:text="Trà sữa Bạc hà"/>

        <TextView
            android:id="@+id/tvProductPrice"
            android:text="23.000 đ"
            android:textColor="@color/colorSecondaryDark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/tvProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvProperties"
            android:text="70% đường; 100% đá"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="normal"
            android:layout_below="@id/tvProductPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:layout_width="150dp"
            android:layout_height="25dp"
    android:layout_below="@id/tvProperties"
    android:id="@+id/detail_numberBtn"
    android:layout_marginEnd="10dp"
    app:textSize="8sp"
    app:initialNumber="1"
    app:finalNumber="20"
    >
</com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

        <ImageView
            android:id="@+id/imgClear"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
    android:layout_marginRight="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@android:drawable/ic_menu_close_clear_cancel"/>
    </RelativeLayout>

</LinearLayout>