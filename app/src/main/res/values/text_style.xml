<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.SubText">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="AppTheme.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#8C000000</item>
    </style>

    <style name="AppTheme.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black54</item>
    </style>

    <style name="AppTheme.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black54</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="AppTheme.Subheading">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black87</item>
    </style>

    <style name="AppTheme.Title">
        <item name="android:textColor">#D9000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <!--custom text size-->
    <style name="AppTheme.Title2">
        <item name="android:textColor">#D9000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

</resources>